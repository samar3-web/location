<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavigationBar.HomeFragment">

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:id="@+id/select_images"
     android:text="Select Images"
     android:layout_margin="50dp"
     />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upload_images"
        android:text="Upload Images"
        android:layout_margin="30dp"
        android:layout_toRightOf="@+id/select_images"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/show_imageview"
        android:layout_centerInParent="true"

        android:backgroundTint="@color/purple_500"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_images"
        android:text="Get Images"
        android:layout_margin="30dp"
        android:layout_below="@+id/show_imageview"
        />

</RelativeLayout>
