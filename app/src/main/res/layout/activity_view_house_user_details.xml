<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#DA2C67"
            app:cardCornerRadius="2dp"
            app:cardElevation="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                app:cornerRadius="200dp"
                android:elevation="30dp"
                android:drawableRight="@drawable/edit_pen"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                app:cornerRadius="200dp"
                android:elevation="30dp"
                android:text="save"
                android:drawableRight="@drawable/edit_pen"
                android:visibility="gone"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addNew"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                app:cornerRadius="200dp"
                android:elevation="30dp"
                android:text="add New House"
                android:drawableRight="@drawable/addhouse1"
                android:layout_gravity="bottom|right"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <com.google.android.material.card.MaterialCardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:padding="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="300dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="200dp"
                            app:cardElevation="20dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/owner_profile_image"
                                android:layout_width="155dp"
                                android:layout_height="150dp"
                                android:background="@color/white"
                                android:src="@mipmap/ic_launcher_round" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>



                <TextView
                    android:id="@+id/house_availability"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"

                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:hint="Availability"
                    android:textColorHint="@color/white"

                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/availability_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        />
                    <RadioGroup
                        android:id="@+id/house_availability_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:id="@+id/valable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/purple_500"
                            android:text="True"
                            android:textColor="@color/purple_500"
                            android:paddingHorizontal="5dp"
                            android:imeOptions="actionDone"
                            />

                        <RadioButton
                            android:id="@+id/invalable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/purple_500"
                            android:text="False"
                            android:paddingHorizontal="5dp"
                            android:imeOptions="actionDone"
                            android:textColor="@color/purple_500"
                            />
                    </RadioGroup>

                </LinearLayout>


                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Price"
                    android:inputType="textCapWords"
                    android:textAllCaps="true"
                    android:padding="20dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/bitcoin"
                    android:enabled="false"
                    android:imeOptions="actionDone"

                    />

                <EditText
                    android:id="@+id/owner_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10000000000"
                    android:inputType="phone"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/phone_red"
                    android:enabled="false"
                    android:imeOptions="actionDone"

                    />
                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CityName"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/location"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    />
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/location"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    />


                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Street"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/location"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    />
                <EditText
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Size"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/baseline_numbers_24"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    />
                <EditText
                    android:id="@+id/houseNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="houseNo"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/baseline_menu_open_24"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        </ScrollView>

    </LinearLayout>



</LinearLayout>













