<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ViewHouseDetailsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cardview_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_background"
                android:orientation="vertical"

                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!-- Media -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="18dp"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="8dp">

                                        <ImageView
                                            android:id="@+id/back_home"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:src="@drawable/back_to_home_button" />
                                    </com.google.android.material.card.MaterialCardView>
                                    <!-- Media -->
                                    <ImageView
                                        android:id="@+id/housecardImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="194dp"
                                        android:contentDescription="It is a house image"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/house_banner"

                                        />

                                    <!--profile image-->
                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/profile_cardview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignEnd="@+id/housecardImage"
                                        android:layout_margin="18dp"
                                        app:cardBackgroundColor="@color/colorPrimary"
                                        app:cardCornerRadius="20dp"
                                        app:cardElevation="8dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_alignParentTop="true"
                                            android:src="@drawable/ic_baseline_favorite_24"
                                            app:tint="@color/white" />

                                    </com.google.android.material.card.MaterialCardView>
                                </RelativeLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/collapsable"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerViewHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:drawableLeft="@drawable/house_price"
                                        android:drawablePadding="7dp"
                                        android:text="Price"
                                        android:textSize="18dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:layout_marginRight="6dp"
                                        android:fontFamily="@font/calibri"
                                        android:text="$1000"
                                        android:textColor="#191970"
                                        android:textSize="20dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:drawableLeft="@drawable/house_size"
                                        android:drawablePadding="7dp"
                                        android:text="Area"
                                        android:textSize="18dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                    <TextView
                                        android:id="@+id/size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:text="4BHK"
                                        android:textColor="#191970"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:drawableLeft="@drawable/location_h"
                                        android:drawablePadding="7dp"
                                        android:text="City"
                                        android:textSize="18dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                    <TextView
                                        android:id="@+id/street"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="0dp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:fontFamily="@font/calibri"
                                        android:text="Street"
                                        android:textColor="#191970"
                                        android:textSize="20dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginRight="3dp"
                                        android:drawableLeft="@drawable/price"
                                        android:drawablePadding="7dp"
                                        android:text="House Number"
                                        android:textSize="18dp"

                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                    <TextView
                                        android:id="@+id/houseNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:layout_marginRight="6dp"
                                        android:text="house number"
                                        android:textColor="#191970"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="6dp"
                                        android:drawableLeft="@drawable/home_location"
                                        android:drawablePadding="7dp"
                                        android:text="Location"
                                        android:textSize="18dp"
                                        app:cornerRadius="15dp"
                                        app:elevation="8dp" />

                                    <TextView
                                        android:id="@+id/location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:layout_marginRight="6dp"
                                        android:maxLength="70"
                                        android:text=" local address will be here"
                                        android:textColor="#191970" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <com.microsoft.maps.MapView
                                        android:id="@+id/mapView"
                                        android:layout_width="match_parent"
                                        android:layout_height="230dp"
                                        android:layout_margin="20dp"
                                        />

                                </LinearLayout>


                            </LinearLayout>


                        </ScrollView>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/contactPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/landlord"
                        android:drawablePadding="5dp"
                        android:text="Owner Name"
                        android:textAppearance="?attr/textAppearanceHeadline6" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/chat"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#322584EC"
                            android:clickable="true"
                            android:drawableTint="#0000FF"
                            android:tint="@android:color/white"
                            app:cornerRadius="45dp"
                            app:fabSize="mini"
                            app:icon="@drawable/ic_baseline_chat_24"
                            app:iconGravity="textStart" />

                        <Button
                            android:id="@+id/call"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="#2731EA4A"
                            android:clickable="true"
                            android:drawableTint="#0000FF"
                            android:tint="@android:color/white"
                            app:cornerRadius="45dp"
                            app:fabSize="mini"
                            app:icon="@drawable/baseline_call_24"
                            app:iconGravity="textStart"

                            />


                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            >


        </LinearLayout>
    </ScrollView>


</LinearLayout>