<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#DA2C67"
                app:cardCornerRadius="2dp"
                app:cardElevation="30dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/owner_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    android:drawableRight="@drawable/edit_pen"
                    android:elevation="30dp"
                    app:cornerRadius="200dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/owner_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    android:drawableRight="@drawable/edit_pen"
                    android:elevation="30dp"
                    android:text="save"
                    android:visibility="gone"
                    app:cornerRadius="200dp"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/user_houses_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp"
                    android:drawableRight="@drawable/baseline_settings_24"
                    android:elevation="30dp"
                    android:text="Your Houses"
                    app:cornerRadius="200dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_bk"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"

                        >

                        <com.google.android.material.card.MaterialCardView

                            android:layout_width="90dp"
                            android:layout_height="90dp"

                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="300dp"
                            app:cardElevation="0dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/owner_profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_round" />


                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/owner_name"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"

                            android:inputType="textPersonName"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/owner_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/e"
                        android:drawablePadding="20dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:visibility="gone" />


                    <RelativeLayout style="@style/profileDetailsLayout">

                        <ImageView
                            android:id="@+id/emailImageView"
                            style="@style/profileDetailsImage"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_email" />

                        <TextView
                            style="@style/profileDetailsTextMain"
                            android:layout_toRightOf="@id/emailImageView"
                            android:text="Email" />

                        <EditText
                            android:id="@+id/owner_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/emailImageView"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:padding="20dp"
                            android:text="email@gmail.com"


                            />

                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">

                        <ImageView
                            android:id="@+id/AccountImageView"
                            style="@style/profileDetailsImage"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_name" />

                        <TextView
                            style="@style/profileDetailsTextMain"
                            android:layout_toRightOf="@id/AccountImageView"
                            android:text="Account Type" />

                        <EditText
                            android:id="@+id/owner_accountType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/AccountImageView"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            android:padding="20dp"
                            android:text="Account Type"
                            android:textAllCaps="true"

                            />
                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">

                        <ImageView
                            android:id="@+id/phone"
                            style="@style/profileDetailsImage"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_mobile" />

                        <TextView
                            style="@style/profileDetailsTextMain"
                            android:layout_toRightOf="@id/phone"
                            android:text="Phone number" />

                        <EditText
                            android:id="@+id/owner_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/phone"
                            android:drawablePadding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:padding="20dp"
                            android:text="10000000000"

                            />
                    </RelativeLayout>


                    <RelativeLayout style="@style/profileDetailsLayout">

                        <ImageView
                            android:id="@+id/address"
                            style="@style/profileDetailsImage"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_address" />

                        <TextView
                            style="@style/profileDetailsTextMain"
                            android:layout_toRightOf="@id/address"
                            android:text="Address" />

                        <EditText
                            android:id="@+id/owner_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/address"
                            android:drawablePadding="20dp"
                            android:enabled="false"
                            android:hint="e.g New Airport Road"
                            android:imeOptions="actionDone"
                            android:inputType="textPostalAddress"
                            android:padding="20dp"

                            />
                    </RelativeLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/owner_logout_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:drawableRight="@drawable/logout"
                        android:text="Logout"
                        android:textSize="20sp"
                        app:cornerRadius="20dp"

                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>











