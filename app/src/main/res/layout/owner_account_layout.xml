<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#DA2C67"
                app:cardCornerRadius="2dp"
                app:cardElevation="30dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/owner_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    app:cornerRadius="200dp"
                    android:elevation="30dp"
                    android:drawableRight="@drawable/edit_pen"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/owner_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    app:cornerRadius="200dp"
                    android:elevation="30dp"
                    android:text="save"
                    android:drawableRight="@drawable/edit_pen"
                    android:visibility="gone"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/user_houses_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="10dp"
                    app:cornerRadius="200dp"
                    android:elevation="30dp"
                    android:text="Your Houses"
                    android:drawableRight="@drawable/baseline_settings_24"
                    android:layout_gravity="bottom|right"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/profile_bk"
                    >


                    <com.google.android.material.card.MaterialCardView

                        android:layout_width="90dp"
                        android:layout_height="82dp"
                        android:layout_gravity=""
                        android:padding="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="300dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="200dp"
                                app:cardElevation="20dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/owner_profile_image"
                                    android:layout_width="71dp"
                                    android:layout_height="74dp"
                                    android:background="@color/white"
                                    android:src="@drawable/profile_round" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"

                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/owner_gender"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:hint="gender"
                        android:textColorHint="@color/white"
                        android:visibility="gone"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_margin="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/owner_name_input"
                        android:layout_width="match_parent"
                        android:imeOptions="actionDone"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/e"
                        android:visibility="gone"
                        />


                    <LinearLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="20sp"
                            android:layout_gravity="center_vertical"
                            android:padding="10dp"
                            />
                        <RadioGroup
                            android:id="@+id/owner_gender_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            >

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:text="Male"
                                android:textColor="@color/colorPrimary"
                                android:paddingHorizontal="5dp"
                                android:imeOptions="actionDone"
                                />

                            <RadioButton
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:text="Female"
                                android:paddingHorizontal="5dp"
                                android:imeOptions="actionDone"
                                android:textColor="@color/colorPrimary"
                                />
                        </RadioGroup>

                    </LinearLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/emailImageView"
                            android:src="@drawable/ic_email"
                            android:layout_marginStart="20dp"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Email"
                            android:layout_toRightOf="@id/emailImageView"
                            style="@style/profileDetailsTextMain" />

                        <EditText
                            android:id="@+id/owner_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@gmail.com"
                            android:inputType="textEmailAddress"
                            android:padding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:layout_toRightOf="@id/emailImageView"


                            />

                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/AccountImageView"
                        android:src="@drawable/ic_name"
                        android:layout_marginStart="20dp"
                        style="@style/profileDetailsImage" />

                    <TextView
                        android:text="Account Type"
                        android:layout_toRightOf="@id/AccountImageView"
                        style="@style/profileDetailsTextMain" />

                        <EditText
                            android:id="@+id/owner_accountType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Type"
                            android:inputType="textCapWords"
                            android:textAllCaps="true"
                            android:padding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:layout_toRightOf="@id/AccountImageView"

                            />
                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/phone"
                            android:src="@drawable/ic_mobile"
                            android:layout_marginStart="20dp"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Phone number"
                            android:layout_toRightOf="@id/phone"
                            style="@style/profileDetailsTextMain" />

                        <EditText
                            android:id="@+id/owner_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10000000000"
                            android:inputType="phone"
                            android:drawablePadding="20dp"
                            android:padding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:layout_toRightOf="@id/phone"

                            />
                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/pass"
                            android:src="@drawable/ic_mobile"
                            android:layout_marginStart="20dp"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Password"
                            android:layout_toRightOf="@id/pass"
                            style="@style/profileDetailsTextMain" />

                        <EditText
                            android:id="@+id/owner_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  new Delhi, red fort"
                            android:inputType="textPassword"
                            android:padding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:layout_toRightOf="@id/pass"

                            />
                    </RelativeLayout>
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/address"
                            android:src="@drawable/ic_address"
                            android:layout_marginStart="20dp"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Address"
                            android:layout_toRightOf="@id/address"
                            style="@style/profileDetailsTextMain" />

                        <EditText
                            android:id="@+id/owner_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g New Airport Road"
                            android:inputType="textPostalAddress"
                            android:drawablePadding="20dp"
                            android:padding="20dp"
                            android:enabled="false"
                            android:imeOptions="actionDone"
                            android:layout_toRightOf="@id/address"

                            />
                    </RelativeLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/owner_logout_btn"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cornerRadius="20dp"
                        android:text="Logout"
                        android:textSize="20sp"
                        android:drawableRight="@drawable/logout"

                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>











